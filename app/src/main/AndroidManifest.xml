<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xcityprime.whatsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents">
        <activity android:name=".view.activities.profile.UserProfileActivity"></activity>
        <activity
            android:name=".view.activities.chats.ChatsActivity"
            android:theme="@style/wow" />
        <activity
            android:name=".view.activities.contacts.ContactsActivity"
            android:theme="@style/wow" />
        <activity
            android:name=".view.activities.display.ImageActivity"
            android:theme="@style/wow" />
        <activity
            android:name=".view.activities.profile.ProfileActivity"
            android:theme="@style/Splash" />
        <activity
            android:name=".view.activities.settings.SettingsActivity"
            android:theme="@style/wow" />
        <activity
            android:name=".view.activities.auth.SetUserInfoActivity"
            android:theme="@style/Splash" />
        <activity android:name=".view.activities.auth.PhoneLoginActivity" />
        <activity
            android:name=".view.activities.startup.StartActivity"
            android:theme="@style/Splash" />
        <activity
            android:name=".view.activities.startup.SplashScreen"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/Splash" />
    </application>

</manifest>